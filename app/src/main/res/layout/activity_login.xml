<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.example.myapplication.fitur.login.viewmodel.LoginViewModel" />

        <import type="android.view.View" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:id="@+id/progressBar_login"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:visibility="@{viewModel.isProgress()? View.VISIBLE : View.GONE}"
            android:layout_marginTop="-8dp"
            android:indeterminate="true" />

        <ImageView
            android:id="@+id/imgV_loginLogo"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginTop="40dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/ic_launcher" />


        <LinearLayout
            android:id="@+id/ln_login_bottom"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/icon_medium"
            android:layout_marginLeft="@dimen/spacing_small_1"
            android:layout_marginRight="@dimen/spacing_small_1"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_below="@+id/imgV_loginLogo">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/layout_release"
                android:layout_width="match_parent"
                android:layout_height="@dimen/spacing_huge"
                android:background="@drawable/border_bottom"
                android:textColorHint="@color/colorBlack"
                android:hint="@string/username">

                <EditText
                    android:id="@+id/txt_login_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:maxLength="50"
                    android:text="@={viewModel.userName}"
                    android:enabled="@{!viewModel.isProgress}"
                    android:textColorHighlight="@color/colorBlack"
                    android:textColor="@color/colorBlack"
                    android:textColorLink="@color/colorBlack"
                    android:gravity="center_vertical"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/spacing_small" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/spacing_huge"
                custom:passwordToggleEnabled="true"
                custom:passwordToggleTint="@color/colorWhite"
                android:hint="@string/password"
                android:textColorHint="@color/colorWhite"
                android:background="@drawable/border_bottom">

                <EditText
                    android:id="@+id/txt_login_pass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:inputType="textPassword"
                    android:maxLength="15"
                    android:text="@={viewModel.password}"
                    android:enabled="@{!viewModel.isProgress}"
                    android:textColorHighlight="@color/colorWhite"
                    android:textColor="@color/colorBlack"
                    android:textColorLink="@color/colorBlack" />
            </android.support.design.widget.TextInputLayout>


            <Button
                android:layout_marginTop="20dp"
                android:padding="@dimen/spacing_tiny"
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:background="@drawable/ic_button"
                android:layout_height="50dp"
                android:textColor="@color/colorWhite"
                android:onClick="@{() -> viewModel.processLogin()}"
                android:enabled="@{!viewModel.isProgress}"
                android:text="@string/login" />

        </LinearLayout>

    </RelativeLayout>
</layout>